@{
}
<div id="Check_list">
	<form id="submitForm">
		<table width="100%">
			<tr>
				<td>
					<font color="black">您正在做的业务是：人力资源--调动管理--调动审核列表</font>
				</td>
			</tr>
			<tr>
				<td>
					&nbsp;
				</td>
			</tr>
		</table>
		<table width="100%" border="1" cellpadding=0 cellspacing=1
			   bordercolorlight=#848284 bordercolordark=#eeeeee
			   class="table">
			<tr height="21">
				<td width="19%" class="TD_STYLE1">
					I级机构
				</td>
				<td width="19%" class="TD_STYLE1">
					II级机构
				</td>
				<td width="19%" class="TD_STYLE1">
					Ⅲ级机构
				</td>
				<td width="19%" class="TD_STYLE1">
					薪酬标准
				</td>
				<td width="19%" class="TD_STYLE1">
					名字
				</td>
				<td width="5%" class="TD_STYLE1">
					审核
				</td>
			</tr>
			<tr height="21" v-for="item in tableData">
				<td class="TD_STYLE2">
					{{ item.firstKindName }}
				</td>
				<td class="TD_STYLE2">
					{{ item.secondKindName }}
				</td>
				<td class="TD_STYLE2">
					{{ item.thirdKindName }}
				</td>
				<td class="TD_STYLE2">
					{{ item.salaryStandardName }}
				</td>
				<td class="TD_STYLE2">
					{{ item.humanName }}
				</td>
				<td class="TD_STYLE2">
					<input type="button" value="审核" v-on:click="goUpdate(item.humanId)" class="btn btn-warning" />
				</td>
			</tr>
		</table>
	</form>
</div>
<script>
	new Vue({
		el: '#Check_list',
		data: {
			tableData:[],
		}, 
		methods: {
			goUpdate(val){
				axios.get("/HFDs/Check/" + val)
					.then(res => {
						console.log(res.data)
						$("#main-content").html(res.data)
					})
			},
			/**
			 * 获取所有的待审核的数据
			 */
			getTableData() {
				axios.get("@Url.Action("GetTableData","HFDs")")
				.then(res=>{
					console.log(res.data);
					this.tableData = res.data;
				})
			}
		},
		mounted() {
			this.getTableData();
		},
	})
</script>
