						当前等待复核的薪酬标准总数:
						1
						例
					</td>
				</tr>
			</table>
			<template>
				<el-select v-model="value" placeholder="请选择">
					<el-option v-for="item in options"
							   :key="item.value"
							   :label="item.label"
							   :value="item.value">
					</el-option>
				</el-select>
			</template>
			<el-button type="primary" icon="el-icon-search" v-on:click="fill()">搜索</el-button>
			
			

		</form>
	</div>
	<script>
		
		new Vue({
			el: '#Salarystandard_check_list',
			data: {
				pageIndex: 1,
				pageSize: 3,
				dataCount: 0,
				tableData: [],
				options: [{ value: 'first_kind_name', label: '一级机构发放方式' },
				{ value: 'second_kind_name', label: '二级机构发放方式' },
				{ value: 'third_kind_name', label: '三级机构发放方式' }],
				value: ''
			},
			methods: {
				/**
				 * 改变大小
				 */
				handleSizeChange(val) {
					this.pageSize = val
					this.fill();
				},
				/**
				 * 改变当前页
				 */
				handleCurrentChange(val) {
					this.pageIndex = val
					this.fill();
				},
				/**
				 * 刷新数据
				 */
				fill() {
					var url = "@Url.Action("Register_list","SSDs")?ff=" + this.value;
					this.updateGo(url);



				},
				update(row) {
					console.log(row)
					var url = "@Url.Action("Check","SSDs")?salaryGrantId=" + row.salaryGrantId;
					this.updateGo(url);


					// axios.get("@Url.Action("GetData","SSDs")?pageSize=" + this.value)
					// 	.then(res => {
					// 		console.log(res.data);
					// 		this.dataCount = res.data.dataCount;
					// 		this.tableData = res.data.list;
					// 	})
				},
				/**
				 * 修改页面用
				 */
				updateGo(url) {
					$.ajax({
						url: url,
						type: "GET",
						success: function (result) {
							$("#main-content").html(result);
						},
						error: function (xhr, status, error) {
							console.log(error);
						}
					});
				},
			},
			mounted() {
				
			}
		})
	</script>
