<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-trasitional.dtd">
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<style>
		.container {
			display: flex;
			justify-content: space-between;
		}
	</style>
	<script type="text/javascript">
		function getOptionValue() {
			const selectElement = document.getElementById("mySelect");
			const selectedOption = selectElement.options[selectElement.selectedIndex].value;
			const [id, name] = selectedOption.split("-");

			console.log("ID:", id.trim());
			console.log("Name:", name.trim());
			const inputElement = document.getElementById("MajorKindId");
			inputElement.value = `${id.trim()}`;
			const inputElement2 = document.getElementById("MajorKindName");
			inputElement2.value = `${name.trim()}`;
		}
	</script>
</head>


<body>
	<form id="submitForm">
		<table width="100%">
			<tr>
				<td>
					<font color="black">
						您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置--职位添加
					</font>
				</td>
			</tr>
			<tr>
				<td align="right">
					<input type="button" value="提交" class="BUTTON_STYLE1" id="submitButton" data-url="/Clients/Major_add">
					<input type="button" value="返回" class="BUTTON_STYLE1 updatePage" data-url="/Clients/Major">


					<input type="hidden" value="" id="MajorKindId" name="MajorKindId" />
					<input type="hidden" value="" id="MajorKindName" name="MajorKindName" />
				</td>
			</tr>
		</table>

		<table width="100%" border="1" cellpadding=0 cellspacing=1
			   bordercolorlight=#848284 bordercolordark=#eeeeee
			   class="TABLE_STYLE1">

			<tr>
				<td class="TD_STYLE1" width="19%">
					职位分类
				</td>
				<td class ="TD_STYLE2" width="81%">
						<select style="width:185px" id="mySelect" onchange="getOptionValue()">
                            <option>--请选择--</option>
						@foreach(var majo in ViewData["list"] as List<CMKs>)
						{
								<option value="@majo.MajorKindId-@majo.MajorKindName">@majo.MajorKindId——@majo.MajorKindName</option>
						}
						</select>

				</td>
			</tr>

			<tr>
				<td class="TD_STYLE1" width="19%">
					职位名称
				</td>
				<td class="TD_STYLE2" width="81%">
						<input type="text" class="INPUT_STYLE1" name="MajorName" id="MajorName" />
				</td>
			</tr>
		</table>    <script src="~/js/updatego.js"></script>

	</form>
</body>
</html>

